class Solution {
public:
    bool isPossible(vector<int>& nums) {
        map<int,int> a_map,v_map;
        for(int n : nums){
            a_map[n]++;
        }
        for(int i=0;i<nums.size();i++){
            if(a_map[nums[i]]<=0){
                continue;
            }
            else if(v_map[nums[i]]>0){
                a_map[nums[i]]--;
                v_map[nums[i]]--;
                v_map[nums[i]+1]++;
            }else if(a_map[nums[i]]>0 && a_map[nums[i]+1]>0 && a_map[nums[i]+2]>0){
                a_map[nums[i]]--;
                a_map[nums[i]+1]--;
                a_map[nums[i]+2]--;
                v_map[nums[i]+3]++;
            }else{
                return false;
            }
        }
        return true;
    }
};
