class Solution {
public:
    int findUnsortedSubarray(vector<int>& nums) {
        vector<int> dup=nums;
        sort(dup.begin(),dup.end());
        int i=0,j=nums.size()-1;
        while(i<j){
            if(nums[i]==dup[i]){
                i++;
            }
            else if(nums[j]==dup[j]){
                j--;
            }
            else{
                return j-i+1;
            }
        }
        return 0;
    }
};
